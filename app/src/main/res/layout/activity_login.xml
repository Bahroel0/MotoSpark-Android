<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.example.bahroel.motospark.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_marginTop="60dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorLoginBiru"
            android:gravity="center"/>
        <EditText
            android:id="@+id/input_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderlogin"
            android:textSize="14dp"
            android:textColor="@color/colorLoginBiru"
            android:hint="Masukkan Email"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:textColorHint="@color/colorLoginBiru"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorLoginBiru"
            android:gravity="center"/>
        <EditText
            android:id="@+id/input_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderlogin"
            android:textSize="14dp"
            android:textColor="@color/colorLoginBiru"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColorHint="@color/colorLoginBiru"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="#ffffff"
            android:theme="@style/PrimaryButtonLogin" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun ?"/>
            <TextView
                android:id="@+id/text_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
