<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_detail_motor"
    tools:context="com.example.bahroel.motospark.menu.ViewActivity">

    <RelativeLayout
        android:id="@+id/reFrameFotoDetail"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/frame_foto"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/fotoMotorDetail"
            android:src="@drawable/foto_motor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relNamaMotorDetail"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/reFrameFotoDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/namaMotorDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderform"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:text="Motorku"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:background="#fffdf0"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Nama Motor"
            android:textColor="@color/colorLoginBiru"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relNopolDetail"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relNamaMotorDetail"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/nopolDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderform"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:text="S 1234 L"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:background="#fffdf0"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Nomor Polisi"
            android:textColor="@color/colorLoginBiru"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnTracking"
        android:layout_marginTop="20dp"
        android:theme="@style/PrimaryButtonConnect"
        android:elevation="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:text="Tracking"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_below="@+id/relNopolDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute" />



</RelativeLayout>
